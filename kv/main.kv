<MyScreenManager>:
    AccueilScreen:
    DatabaseScreen:
    SaisieManuelleScreen:
    ScannerScreen:
    ContentItemScreen:

BoxLayout:
    orientation: 'vertical'

    MDTopAppBar:
        title: "My KivyMD App"
        elevation: 10
        left_action_items: [['menu', lambda x: app.on_menu_pressed()]]
        right_action_items: [['dots-vertical', lambda x: app.on_menu_pressed()]]
        size_hint_y: None
        height: dp(56)  # Hauteur typique d'une app bar
        
    MyScreenManager:
        id: screen_manager

    MDBottomNavigation:
        MDBottomNavigationItem:
            name: 'accueil'
            text: 'Accueil'
            icon: 'home'
            on_tab_press: screen_manager.current = 'accueil'

        MDBottomNavigationItem:
            name: 'database'
            text: 'Database'
            icon: 'database'
            on_tab_press: screen_manager.current = 'database'

        MDBottomNavigationItem:
            name: 'saisie_manuelle'
            text: 'Saisie'
            icon: 'pencil'
            on_tab_press: screen_manager.current = 'saisie_manuelle'

        MDBottomNavigationItem:
            name: 'scanner'
            text: 'Scanner'
            icon: 'barcode-scan'
            on_tab_press: screen_manager.current = 'scanner'
