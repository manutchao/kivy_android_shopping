<SaisieManuelleScreen>:
    name: 'saisie_manuelle'

    BoxLayout:
        orientation: 'vertical'


        BoxLayout:
            orientation: 'vertical'
            # padding: dp(5)
            # spacing: dp(5)
            
            MDTextField:
                id: field_libelle
                hint_text: "Saisir libelle"
                mode: "rectangle"
            MDTextField:

                id: field_brand
                hint_text: "Saisir marque"
                mode: "rectangle"

            MDTextField:
                id: field_barcode
                hint_text: "Saisir code barre"
                mode: "rectangle"
            
            MDTextField:
                id: field_comment
                hint_text: "Saisir commentaire"
                mode: "rectangle"
                multiline: True
            
            MDLabel:
                text: "Selectionner une note de 1 Ã  10"
                halign: "center"
            
            MDSlider:
                id: field_note
                min: 1
                max: 10
                value: 5
                step: 1
            
            BoxLayout:
                orientation: 'horizontal'
                size_hint: None, None
                size: self.minimum_size
                spacing: dp(20)
                pos_hint: {"center_x": 0.5, "center_y": 0.5}


                MDRectangleFlatButton:
                    text: "Valider"
                    theme_text_color: "Custom"
                    text_color: "white"
                    line_color: "green"
                    on_release: root.validate_form()

                MDRectangleFlatButton:
                    text: "Effacer"
                    theme_text_color: "Custom"
                    text_color: "white"
                    line_color: "red"
                    on_release: app.reset()