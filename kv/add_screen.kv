<DetailScreen>:
    BoxLayout:
        orientation: 'vertical'
        
        MDTopAppBar:
            title: "Detail"
            left_action_items: [["arrow-left", lambda x: app.show_main_screen()]]
            right_action_items: [["delete", lambda x: app.delete_item()]]


        BoxLayout:
            orientation: 'vertical'
            padding: dp(20)
            spacing: dp(20)
            
            MDTextField:
                id: tf_libelle
                hint_text: "Saisir libelle"
                mode: "rectangle"


            MDTextField:
                id: tf_brand
                hint_text: "Saisir la marque"
                mode: "rectangle"

            MDTextField:
                id: tf_barcode
                hint_text: "Saisir code barre"
                mode: "rectangle"
            
            MDTextField:
                id: tf_comment
                hint_text: "Saisir commentaire"
                mode: "rectangle"
                multiline: True
            
            MDLabel:
                text: "Selectionner une note de 1 Ã  10"
                halign: "center"
            
            MDSlider:
                id: slider
                min: 1
                max: 10
                value: 5
                step: 1
            
            BoxLayout:
                orientation: 'horizontal'
                size_hint: None, None
                size: self.minimum_size
                spacing: dp(20)
                pos_hint: {"center_x": 0.5, "center_y": 0.5}


                MDRectangleFlatButton:
                    text: "Valider"
                    theme_text_color: "Custom"
                    text_color: "white"
                    line_color: "green"
                    on_release: app.submit()

                MDRectangleFlatButton:
                    text: "Effacer"
                    theme_text_color: "Custom"
                    text_color: "white"
                    line_color: "red"
                    on_release: app.reset()