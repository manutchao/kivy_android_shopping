# main_screen.kv

<MainScreen>:
    BoxLayout:
        orientation: "vertical"
        MDTopAppBar:
            title: "Example App"
            right_action_items: [["magnify", lambda x: root.on_search_button_press()]]

        MDBottomNavigation:
            id: bottom_navigation
            MDBottomNavigationItem:
                name: "Accueil"
                text: "Accueil"
                icon: "home"

            MDBottomNavigationItem:
                name: "Base de données"
                text: "Base de données"
                icon: "database"
                MDList:
                    id: data_list

            MDBottomNavigationItem:
                name: "Saisie manuelle"
                text: "Saisie manuelle"
                icon: "pen"

            MDBottomNavigationItem:
                name: "Scanner"
                text: "Scanner"
                icon: "barcode-scan"
                ScannerScreen:
                    id: scanner_screen
